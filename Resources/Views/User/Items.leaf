#set("title") {#L10N("items"){Items}}
#//
#set("content") {
<h2>#(page.listTitle)</h2>
<h3>#L10N("your-wishes"){Your Wishes} <small class="text-muted">(#count(page.items)/#(page.maximumNumberOfItems))</small></h3>
#if(count(page.items) > 0 && count(page.items) < page.maximumNumberOfItems) {
<div class="btn-toolbar justify-content-center justify-content-sm-start mt-4 mb-4">
    <a class="nav-link btn btn-secondary mr-3" href="/user/#(page.userID)/list/#(page.listID)/items/create">#L10N("create-item"){Add a new item}</a>
</div>
}
#embed("User/Items-Table")
<div class="btn-toolbar justify-content-center justify-content-sm-start mt-4 mb-4">
#if(count(page.items) < page.maximumNumberOfItems) {
    <a class="nav-link btn btn-secondary mr-3" href="/user/#(page.userID)/list/#(page.listID)/items/create">#L10N("create-item"){Add a new item}</a>
}
</div>
}
#//
#embed("Wishlist")
